---
import Button from '../../components/Button';

type Plan = {
  name: string;
  price: string;
  description: string;
  buttonText: string;
  features: string[];
  popular?: boolean;
};

const plans: Plan[] = [
  {
    name: 'One class / week',
    price: '£22',
    description: 'Perfect for busy professionals. All classes 45mins.',
    buttonText: 'Get Started',
    features: ['1 class per week', 'Monthly billing', 'Access booking system'],
  },
  {
    name: 'Two classes / week',
    price: '£42',
    description: 'The sweet spot for consistent progress.',
    buttonText: 'Most Popular',
    features: ['2 classes per week', 'Monthly billing', 'Priority scheduling'],
  },
  {
    name: 'Unlimited classes',
    price: '£55',
    description: 'Zero limits. Maximum results. Best value.',
    buttonText: 'Go Unlimited',
    features: ['Unlimited classes', 'Full coaching access', 'Best value per session'],
    popular: true,
  },
];
---

<section id="pricing" class="bg-[var(--primary-white)] py-24">
  <div class="mx-auto max-w-7xl px-6">
    
    <div class="mb-20 text-center lg:text-left">
      <h2 class="text-5xl md:text-7xl font-black text-[var(--primary-black)] uppercase italic leading-none tracking-tighter">
        Choose Your <span class="text-[var(--primary-blue)]">Level.</span>
      </h2>
      <p class="mt-4 text-xl font-medium text-gray-500 uppercase tracking-widest">Simple Monthly Subscriptions</p>
    </div>

    <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
      {
        plans.map((plan) => (
          <div
            class={`relative flex flex-col p-8 transition-all duration-300 border-t-8 shadow-2xl ${
              plan.popular 
                ? 'border-[var(--primary-blue)] bg-[#2C2A29] text-white scale-105 z-10' 
                : 'border-[var(--primary-black)] bg-white text-[var(--primary-black)]'
            }`}
          >
            {plan.popular && (
              <div class="absolute -top-5 left-1/2 -translate-x-1/2 bg-[var(--primary-blue)] px-4 py-1 text-[10px] font-black uppercase tracking-widest text-white">
                Best Value
              </div>
            )}

            <div class="mb-8">
              <h3 class={`text-2xl font-black uppercase italic tracking-tighter ${plan.popular ? 'text-[var(--primary-blue)]' : 'text-[var(--primary-black)]'}`}>
                {plan.name}
              </h3>
              <div class="mt-4 flex items-baseline gap-1">
                <span class="text-5xl font-black tracking-tighter">{plan.price}</span>
                <span class="text-lg font-bold opacity-60">/MTH</span>
              </div>
              <p class={`mt-4 text-sm font-medium leading-relaxed ${plan.popular ? 'text-gray-300' : 'text-gray-600'}`}>
                {plan.description}
              </p>
            </div>

            <ul class="mb-10 flex-1 space-y-4">
              {plan.features.map((feature) => (
                <li class="flex items-center gap-3">
                  <svg class="h-5 w-5 flex-shrink-0 text-[var(--primary-blue)]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                  </svg>
                  <span class="text-sm font-bold uppercase tracking-tight">{feature}</span>
                </li>
              ))}
            </ul>

            <div class="mt-auto">
              <Button 
                client:visible 
                text={plan.buttonText} 
                variant={plan.popular ? "long" : "short"}
                className="w-full"
              />
            </div>
          </div>
        ))
      }
    </div>

    <div class="mt-16 text-center">
      <p class="text-sm font-bold uppercase tracking-widest text-gray-400">
        All classes are 45 minutes. Contact us for a <span class="text-[var(--primary-blue)] underline">Free Trial</span> session.
      </p>
    </div>
  </div>
</section>