---
import { FaFacebookF, FaInstagram } from 'react-icons/fa';
import { FaLocationDot, FaPhone, FaEnvelope } from 'react-icons/fa6';
import { Image } from 'astro:assets';
import logo from '../../public/logo-white.webp';

const currentDate = new Date(Date.now());
const currentYear = currentDate.getFullYear();
---

<footer class="bg-[#44444C] text-white border-t-8 border-[var(--primary-blue)] relative overflow-hidden">
  
  {/* BACKGROUND WATERMARK - Adds depth/branding without clutter */}
  <div class="absolute top-0 right-0 opacity-[0.03] pointer-events-none select-none">
    <span class="text-[20rem] font-black italic leading-none">CPTS</span>
  </div>

  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-20 relative z-10">
    
    {/* THE "CRAZY QUOTE" - The Marketing Hook */}
    <div class="mb-20 pb-12 border-b border-white/10">
      <h2 class="text-4xl md:text-6xl lg:text-7xl font-black italic uppercase leading-none tracking-tighter text-center md:text-left">
        One year from now, <br />
        you'll wish you <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-[var(--primary-blue)]">started today.</span>
      </h2>
    </div>

    <div class="grid grid-cols-1 gap-12 md:grid-cols-2 lg:grid-cols-4">
      
      {/* BRAND COLUMN */}
      <div class="space-y-6">
        <div class="w-48">
          <Image src={logo} alt="Cardiff PT Studio" class="w-full h-auto" />
        </div>
        <p class="text-gray-400 font-medium leading-relaxed max-w-xs">
          We don't sell memberships. We sell results. Join the premier transformation facility in Cardiff.
        </p>
        <div class="flex space-x-4">
          <a
            href="https://www.facebook.com/share/667ASau6rMnJpvqw/?mibextid=LQQJ4d"
            class="h-10 w-10 flex items-center justify-center bg-white/5 hover:bg-[var(--primary-blue)] transition-all duration-300 rounded-sm group"
            aria-label="Facebook"
          >
            <FaFacebookF className="h-5 w-5 text-gray-400 group-hover:text-white transition-colors" />
          </a>

          <a
            href="https://www.instagram.com/cardiffptstudio/"
            class="h-10 w-10 flex items-center justify-center bg-white/5 hover:bg-[var(--primary-blue)] transition-all duration-300 rounded-sm group"
            aria-label="Instagram"
          >
            <FaInstagram className="h-5 w-5 text-gray-400 group-hover:text-white transition-colors" />
          </a>
        </div>
      </div>

      {/* QUICK LINKS - Clean & Spaced */}
      <div>
        <h4 class="mb-6 text-xl font-black uppercase italic tracking-wider">Explore</h4>
        <ul class="space-y-4">
          <li><a href="#hero" class="text-gray-400 hover:text-white hover:translate-x-1 transition-all duration-300 inline-block font-bold uppercase text-sm tracking-wide">Home</a></li>
          <li><a href="#about-us" class="text-gray-400 hover:text-white hover:translate-x-1 transition-all duration-300 inline-block font-bold uppercase text-sm tracking-wide">About Us</a></li>
          <li><a href="#schedule" class="text-gray-400 hover:text-white hover:translate-x-1 transition-all duration-300 inline-block font-bold uppercase text-sm tracking-wide">Timetable</a></li>
          <li><a href="#download-app" class="text-gray-400 hover:text-white hover:translate-x-1 transition-all duration-300 inline-block font-bold uppercase text-sm tracking-wide">Our App</a></li>
          <li><a href="#pricing" class="text-gray-400 hover:text-white hover:translate-x-1 transition-all duration-300 inline-block font-bold uppercase text-sm tracking-wide">Pricing</a></li>
        </ul>
      </div>

      {/* CONTACT INFO - Icon based */}
      <div class="col-span-1 md:col-span-2 lg:col-span-2 pl-0 lg:pl-12">
        <h4 class="mb-6 text-xl font-black uppercase italic tracking-wider">Find Us</h4>
        <ul class="space-y-6">
          <li class="flex items-start gap-4 group">
            <div class="mt-1 flex-shrink-0 w-8 h-8 flex items-center justify-center bg-blue-600/20 text-blue-500 rounded-sm hover:bg-[var(--primary-blue)] group-hover:text-white transition-all">
              <FaLocationDot />
            </div>
            <div class="text-gray-400 group-hover:text-white transition-colors">
              <span class="block font-bold text-white uppercase tracking-wide">Cardiff PT Studio</span>
              135 Maindy Road, Cardiff, CF24 4HN
            </div>
          </li>
          
          <li class="flex items-center gap-4 group">
             <div class="flex-shrink-0 w-8 h-8 flex items-center justify-center bg-blue-600/20 text-blue-500 rounded-sm group-hover:bg-[var(--primary-blue)] hover:text-white transition-all">
              <FaPhone />
            </div>
            <a href="tel:07796144082" class="text-gray-400 font-bold hover:text-white transition-colors">07796 144 082</a>
          </li>

          <li class="flex items-center gap-4 group">
             <div class="flex-shrink-0 w-8 h-8 flex items-center justify-center bg-blue-600/20 text-blue-500 rounded-sm hover:bg-[var(--primary-blue)] group-hover:text-white transition-all">
              <FaEnvelope />
            </div>
            <a href="mailto:info@cardiffptstudio.co.uk" class="text-gray-400 font-bold hover:text-white transition-colors">info@cardiffptstudio.co.uk</a>
          </li>
        </ul>
      </div>

    </div>

    {/* COPYRIGHT */}
    <div class="mt-20 border-t border-white/10 pt-8 flex flex-col md:flex-row justify-between items-center gap-4 text-xs font-bold text-gray-500 uppercase tracking-widest">
      <p>&copy; {currentYear} Cardiff PT Studio. All rights reserved.</p>
      <p>Built for Performance.</p>
    </div>
  </div>
</footer>