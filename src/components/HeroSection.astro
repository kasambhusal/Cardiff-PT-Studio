---
import { Image } from 'astro:assets';
import hero1 from '../images/hero-1.jpg';
import hero2 from '../images/hero-2.jpg';
import member1 from '../images/fitness-member-1.jpg';
import member2 from '../images/fitness-member-2.jpg';
import member3 from '../images/fitness-member-3.jpg';
---

<section id="hero" class="bg-white py-8 lg:py-14">
  <div class="max-w-8xl mx-auto px-4 sm:px-14 lg:px-20">
    <div class="w-full">
      <div class="flex flex-col gap-2 lg:flex-row lg:items-end">
        <div class="w-full lg:w-6/7">
          <h1
            class="text-2xl leading-tight font-bold text-[color:var(--primary-blue)] sm:text-3xl lg:text-4xl xl:text-6xl"
          >
            <span class="mr-2 inline">LIFE CHANGING BODY.</span>

            <span class="inline-flex items-center gap-2">
              <Image
                src={hero2}
                alt="Nutrition planning"
                class="inline-block h-10 w-40 rounded-lg object-cover align-middle sm:h-12 sm:w-56 lg:h-14 lg:w-60"
              />
              <span class="sr-only">Nutrition planning</span>
            </span>

            <span class="mt-3 block">PERSONALIZED WELLNESS JOURNEY.</span>
          </h1>
        </div>

        <div class="w-full lg:w-1/5 lg:pl-6">
          <p class="mt-2 text-sm text-gray-600 sm:text-base lg:mt-0">
            Join Cardiff PT Studio and become part of a community that pushes limits, smashes goals,
            and inspires greatness.
          </p>
        </div>
      </div>
    </div>

    <div class="mt-16 lg:mt-20">
      <div class="relative mx-2 sm:mx-6 lg:mx-0">
        <img
          src={hero1.src}
          alt="Gym equipment with dumbbells"
          class="h-64 w-full rounded-2xl object-cover sm:h-80 lg:h-[600px]"
        />

        <div
          class="pointer-events-none absolute inset-0 flex items-center justify-center sm:hidden"
        >
          <a
            href="#"
            class="pointer-events-auto inline-block rounded-full bg-[color:var(--primary-blue)] px-8 py-4 text-sm font-semibold text-white uppercase shadow-lg"
            aria-label="Join Now"
          >
            Join Now
          </a>
        </div>

        <div
          class="absolute top-10 left-8 hidden -translate-x-1/2 -translate-y-1/2 transform sm:block lg:top-16 lg:left-8"
        >
          <div
            class="flex h-28 w-36 items-center justify-center rounded-full bg-white lg:h-40 lg:w-48"
          >
            <div
              class="relative h-20 w-20 cursor-pointer overflow-hidden rounded-full bg-[color:var(--primary-black)] lg:h-32 lg:w-32"
            >
              <a href="#">
                <img
                  src={member1.src}
                  alt="Join Now"
                  class="h-full w-full object-cover opacity-60"
                />
                <div
                  class="absolute inset-0 flex flex-col items-center justify-center text-2xl leading-tight font-bold tracking-widest text-white uppercase"
                >
                  <div>Join</div>
                  <div>Now</div>
                </div>
              </a>
            </div>
          </div>
        </div>

        <div
          class="absolute right-0 bottom-0 hidden w-44 translate-x-1/2 translate-y-1/2 transform rounded-t-2xl bg-white p-3 lg:right-18 lg:bottom-14 lg:block"
        >
          <div class="flex flex-col items-center">
            <div class="mb-2 flex -space-x-3">
              <img
                src={member1.src}
                alt="M1"
                class="h-12 w-12 rounded-full border-4 border-white object-cover"
              />
              <img
                src={member2.src}
                alt="M2"
                class="h-12 w-12 rounded-full border-4 border-white object-cover"
              />
              <img
                src={member3.src}
                alt="M3"
                class="h-12 w-12 rounded-full border-4 border-white object-cover"
              />
            </div>
            <div class="text-center">
              <div class="text-xl font-bold tracking-widest text-[color:var(--primary-black)]">
                10+
              </div>
              <div class="text-sm tracking-widest text-gray-500">Trainers</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
