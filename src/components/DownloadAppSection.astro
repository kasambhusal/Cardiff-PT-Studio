---
import { Image } from 'astro:assets';
import iphone from '../images/iphone.png';
import android from '../images/android.png';
---

<section id="download-app" class="relative overflow-hidden py-16">
  <div class="mx-auto max-w-7xl px-4">
    <!-- Blue pill container -->
    <div
      class="relative overflow-visible rounded-3xl bg-[var(--primary-blue)] px-6 py-12 text-white sm:px-10 lg:py-16"
    >
      <!-- Left device image (absolute so it doesn't expand width) -->
      <div
        class="pointer-events-none absolute top-1/2 left-0 hidden -translate-x-12 -translate-y-1/2 transform md:block"
      >
        <img
          src={iphone.src}
          alt="iPhone app"
          class="w-56 rotate-6 object-contain drop-shadow-2xl lg:w-80 xl:w-96"
        />
      </div>

      <!-- Right device image -->
      <div
        class="pointer-events-none absolute top-1/3 right-0 hidden translate-x-12 -translate-y-1/2 transform md:block"
      >
        <img
          src={android.src}
          alt="Android app"
          class="w-56 -rotate-12 object-contain drop-shadow-2xl lg:w-80 xl:w-96"
        />
      </div>

      <!-- Mobile / tablet: show both smaller and centered but overlapping pill -->
      <div class="-mt-6 mb-4 flex items-center justify-between gap-2 md:hidden">
        <img
          src={iphone.src}
          alt="iPhone app"
          class="h-auto w-52 translate-y-0 object-cover drop-shadow-lg"
        />
        <img
          src={android.src}
          alt="Android app"
          class="absolute left-40 h-auto w-48 translate-y-0 object-cover drop-shadow-lg"
        />
      </div>

      <!-- Content (kept centered in pill) -->
      <div class="relative z-10 flex flex-col items-center rounded-2xl p-6 text-center">
        <h2
          class="mb-8 text-center text-3xl leading-none font-extrabold tracking-wide text-white uppercase select-none sm:text-4xl lg:text-5xl"
        >
          Download Our App
        </h2>

        <p class="mb-6 max-w-xl text-base text-white/90 sm:text-lg">
          Get instant access to class schedules, book sessions, and track your progress â€” all from
          your phone.
        </p>

        <div class="flex flex-col items-center gap-3 sm:flex-row sm:gap-4">
          <a
            href="#"
            class="flex items-center gap-3 rounded-lg border-2 border-[var(--primary-light)] bg-[var(--primary-blue)] px-6 py-3 font-semibold text-white shadow-sm transition-colors hover:bg-[var(--primary-black)]"
            aria-label="Download on the App Store"
          >
            <svg
              class="h-6 w-6 flex-shrink-0 text-white"
              viewBox="0 0 24 24"
              fill="currentColor"
              aria-hidden="true"
            >
              <path
                d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"
              ></path>
            </svg>

            <div class="text-left">
              <div class="text-xs leading-none text-white/90">Download on</div>
              <div class="text-sm leading-none font-bold text-white">App Store</div>
            </div>
          </a>

          <a
            href="#"
            class="flex items-center gap-3 rounded-lg border-2 border-[var(--primary-light)] bg-[var(--primary-blue)] px-6 py-3 font-semibold text-white shadow-sm transition-colors hover:bg-[var(--primary-black)]"
            aria-label="Get it on Google Play"
          >
            <svg
              class="h-6 w-6 flex-shrink-0 text-white"
              viewBox="0 0 24 24"
              fill="currentColor"
              aria-hidden="true"
            >
              <path
                d="M3,20.5V3.5C3,2.91 3.34,2.39 3.84,2.15L13.69,12L3.84,21.85C3.34,21.6 3,21.09 3,20.5M16.81,15.12L6.05,21.34L14.54,12.85L16.81,15.12M20.16,10.81C20.5,11.08 20.75,11.5 20.75,12C20.75,12.5 20.53,12.9 20.18,13.18L17.89,14.5L15.39,12L17.89,9.5L20.16,10.81M6.05,2.66L16.81,8.88L14.54,11.15L6.05,2.66Z"
              ></path>
            </svg>

            <div class="text-left">
              <div class="text-xs leading-none text-white/90">Get it on</div>
              <div class="text-sm leading-none font-bold text-white">Google Play</div>
            </div>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
